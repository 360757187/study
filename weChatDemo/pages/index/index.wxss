/* pages/index/index.wxss */
.topbar{
    height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    border-bottom: 2rpx solid #e6e6e6;
}

.switch-type{
    width: 40%; 
    height: 100%;
    display: flex; 
    align-items: center;
    justify-content: space-around;
}

.active{
    height: 100%;
    line-height: 88rpx;
    color: #ef4238;
    margin-bottom: -4rpx;
    border-bottom: 4rpx solid #ef4238;
}

.movie-item{
    display: flex;
}

.movie-item-info{
    display: flex;
    flex: 1;
    overflow: hidden;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #ccc;
}